<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence 
             http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
    <persistence-unit name="appuser">
    	<class>fr.intech.s5.appusers.beans.User</class>
    	<class>fr.intech.s5.appusers.beans.Telephone</class>
        <properties>
            <property name="hibernate.archive.autodetection" value="class" />
            <!-- <property name="hibernate.show_sql" value="true" /> -->
            <property name="hibernate.format_sql" value="true" />
 
            <!-- Configuration de la BDD -->
            <property name="javax.persistence.jdbc.driver" value="org.hsqldb.jdbcDriver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:hsqldb:file:emarket" />
            <property name="javax.persistence.jdbc.user" value="sa" />
            <property name="javax.persistence.jdbc.password" value="" />
 
            <!-- Spécifie le 'dialecte' SQL utilisé pour communiquer avec la BDD -->
            <!-- <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" /> -->
 
            <!-- Indique a Hibernate de (re-)créer la BDD au lancement de l'application -->
            <!-- <property name="hibernate.hbm2ddl.auto" value="create" /> -->
        </properties>
 
    </persistence-unit>
</persistence>